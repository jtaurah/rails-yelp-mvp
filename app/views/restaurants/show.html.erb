<!-- app/views/restaurants/show.html.erb -->
<h1><%= @restaurant.name %></h1>
<p><strong>Category:</strong> <%= @restaurant.category %></p>
<p><strong>Address:</strong> <%= @restaurant.address %></p>

<h2>Reviews</h2>
<ul class="list-group">
  <% if @reviews.present? %>
    <% @reviews.each do |review| %>
      <li class="list-group-item">
        <strong>Rating:</strong> <%= review.rating %>
        <p><%= review.content %></p>
      </li>
    <% end %>
  <% else %>
    <li class="list-group-item">
      No reviews for this restaurant yet.
    </li>
  <% end %>
</ul>

<%= link_to 'Back to Restaurants', restaurants_path, class: 'btn btn-secondary' %>

<%= link_to 'Delete', restaurant_path(@restaurant, destroy: true), data: { turbo_method: :delete }, class: 'btn btn-danger', method: :delete, confirm: 'Are you sure you want to delete this restaurant?' %>

<%= link_to 'Add a Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
